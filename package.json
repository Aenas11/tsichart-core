{
  "name": "tsichart-workspace",
  "version": "2.0.0",
  "private": true,
  "description": "Monorepo for TSIChart - Time Series Interactive Charts library and framework wrappers",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "build:core": "pnpm --filter tsichart-core build",
    "build:react": "pnpm --filter tsichart-react build",
    "build:vue": "pnpm --filter tsichart-vue build",
    "test": "pnpm -r test",
    "test:core": "pnpm --filter tsichart-core test",
    "test:coverage": "pnpm -r test:coverage",
    "test:watch": "pnpm -r test:watch",
    "clean": "pnpm -r clean && shx rm -rf build_artifacts",
    "lint": "pnpm -r lint",
    "rollup": "rollup --c",
    "copy-root-files": "shx cp dist/tsiclient.js . && shx cp dist/tsiclient.d.ts . && shx cp dist/tsiclient.css . && shx cp dist/tsiclient.min.css .",
    "pack": "shx mkdir -p build_artifacts && npm pack && shx mv *.tgz build_artifacts/",
    "post-build": "npm run copy-root-files && npm run pack",
    "umd-analyze": "webpack-bundle-analyzer ./build_artifacts/umd_stats.json",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@storybook/addon-a11y": "^9.1.13",
    "@storybook/addon-docs": "^9.1.13",
    "@storybook/addon-vitest": "^9.1.13",
    "@storybook/web-components-vite": "^9.1.13",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.2",
    "file-loader": "^6.2.0",
    "lit": "^3.3.1",
    "mini-css-extract-plugin": "^2.9.4",
    "playwright": "^1.56.1",
    "postcss-url": "^10.1.3",
    "rollup": "^4.52.4",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-delete": "^3.0.1",
    "rollup-plugin-dts": "^6.2.3",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "rollup-plugin-visualizer": "^6.0.4",
    "sass-loader": "^16.0.5",
    "shx": "^0.4.0",
    "storybook": "^9.1.13",
    "style-loader": "^4.0.0",
    "terser-webpack-plugin": "^5.3.14",
    "ts-loader": "^9.5.4",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "url-loader": "^4.1.1",
    "vitest": "^3.2.4",
    "webpack": "^5.102.1",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2",
    "webpack-merge": "^6.0.1"
  },
  "dependencies": {
    "@types/awesomplete": "^1.1.16",
    "@types/d3": "^7.4.3",
    "awesomplete": "^1.1.7",
    "d3": "^7.9.0",
    "d3-interpolate-path": "^2.3.0",
    "d3-voronoi": "^1.1.4",
    "moment": "^2.30.1",
    "moment-timezone": "^0.6.0",
    "sass": "1.93.2",
    "split.js": "^1.6.5"
  }
}
